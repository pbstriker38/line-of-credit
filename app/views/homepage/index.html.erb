<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">Account Summary</div>
      <table class="table">
        <thead>
          <tr>
            <th>Credit Limit</th>
            <th>Balance</th>
            <th>APR</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= humanized_money_with_symbol(current_user.credit_limit) %></td>
            <td><%= humanized_money_with_symbol(-current_user.balance) %></td>
            <td>35%</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-1 col-md-offset-6">
    <%= link_to 'Withdraw', withdraw_transactions_path, class: 'btn btn-default' %>
  </div>
  <div class="col-md-1">
    <%= link_to 'Pay', pay_transactions_path, class: 'btn btn-default' %>
  </div>
</div>
